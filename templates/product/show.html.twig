{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ product.releaseDate ? product.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    {% if is_granted('ROLE_EDITOR') %}<a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>{% endif %}

    {% if is_granted('ROLE_EDITOR') %}{{ include('product/_delete_form.html.twig') }}{% endif %}
{% endblock %}
